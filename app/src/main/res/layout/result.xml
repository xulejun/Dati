<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:id="@+id/result_lin"
    android:background="@drawable/result_bg">
    
    <RelativeLayout 
		 android:layout_width="fill_parent"
		 android:layout_height="48.0dp"
		 android:id="@+id/android_home" 
		 android:background="@drawable/radio_toptitle_shape">

	    <TextView 
	        style="@style/title"
	        android:id="@+id/result_title"
		    android:text=""
	    />
	    <TextView 
		    android:layout_width="match_parent"
		    android:layout_height="1dp"
		    android:background="@color/color2"
		    android:layout_alignParentBottom="true"
	    />
	</RelativeLayout>
	<ScrollView 
        android:layout_width="match_parent"
        android:padding="10dp"
        android:layout_gravity="center_horizontal"
        android:layout_height="wrap_content">
	    
	    <LinearLayout 
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:padding="15dp"
	        android:background="@drawable/radio_bg_shape"
	        android:orientation="vertical">
		        <TextView 
		            style="@style/androidtest_title_tv"
		            android:text="@string/single_topic"/>
	        
	        <LinearLayout 
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:layout_marginTop="3dp"
	            android:background="@drawable/radio_shape"
	            android:orientation="vertical">
	            <LinearLayout 
	                android:layout_width="match_parent"
	                android:layout_height="wrap_content"
	                android:padding="5dp"
	                android:orientation="horizontal">
	                <TextView 
	                    style="@style/result_trem_tv"
	                    android:text="@string/topic_num"/>
	                <TextView 
	                    style="@style/result_trem_tv"
	                    android:text="@string/present_choice"/>
	                <TextView 
	                    style="@style/result_trem_tv"
	                    android:text="@string/right_wrong"/>
	                <TextView 
	                    style="@style/result_trem_tv"
	                    android:text="@string/result"/>
	                <TextView 
	                    style="@style/result_trem_tv"
	                    android:text="@string/score"/>
	            </LinearLayout>
	            <TextView 
				    android:layout_width="match_parent"
				    android:layout_height="1dp"
				    android:background="@color/result_line_tv"
				    />
	            <LinearLayout 
	                android:layout_width="match_parent"
	                android:layout_height="wrap_content"
	                android:padding="3dp"
	                android:orientation="horizontal">
	                <TextView 
	                    android:text="@string/topic_num1"
	                    style="@style/result_trem_tv"/>
	                <TextView 
	                    android:text=""
	                    android:id="@+id/present1"
	                    style="@style/result_trem_tv"/>
	                <TextView 
	                    android:text=""
	                    android:id="@+id/right_wrong1"
	                    style="@style/result_trem_tv"/>
	                <TextView 
	                    android:text=""
	                    android:id="@+id/result1"
	                    style="@style/result_trem_tv"/>
	                <TextView 
	                    android:text=""
	                    android:id="@+id/score1"
	                    style="@style/result_trem_tv"/>
	            </LinearLayout>
	            <LinearLayout 
	                android:layout_width="match_parent"
	                android:layout_height="wrap_content"
	                android:padding="3dp"
	                android:orientation="horizontal">
	                <TextView 
	                    android:text="@string/topic_num2"
	                    style="@style/result_trem_tv"/>
	                <TextView 
	                    android:text=""
	                    android:id="@+id/present2"
	                    style="@style/result_trem_tv"/>
	                <TextView 
	                    android:text=""
	                    android:id="@+id/right_wrong2"
	                    style="@style/result_trem_tv"/>
	                <TextView 
	                    android:text=""
	                    android:id="@+id/result2"
	                    style="@style/result_trem_tv"/>
	                <TextView 
	                    android:text=""
	                    android:id="@+id/score2"
	                    style="@style/result_trem_tv"/>
	            </LinearLayout>
	            <LinearLayout 
	                android:layout_width="match_parent"
	                android:layout_height="wrap_content"
	                android:padding="3dp"
	                android:orientation="horizontal">
	                <TextView 
	                    android:text="@string/topic_num3"
	                    style="@style/result_trem_tv"/>
	                <TextView 
	                    android:text=""
	                    android:id="@+id/present3"
	                    style="@style/result_trem_tv"/>
	                <TextView 
	                    android:text=""
	                    android:id="@+id/right_wrong3"
	                    style="@style/result_trem_tv"/>
	                <TextView 
	                    android:text=""
	                    android:id="@+id/result3"
	                    style="@style/result_trem_tv"/>
	                <TextView 
	                    android:text=""
	                    android:id="@+id/score3"
	                    style="@style/result_trem_tv"
	                    />
	            </LinearLayout>
	        </LinearLayout>
		        <TextView 
		            android:layout_marginTop="15dp"
		            style="@style/androidtest_title_tv"
		            android:text="@string/more_topic"/>
	        
	        <LinearLayout 
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:layout_marginTop="3dp"
	            android:background="@drawable/radio_shape"
	            android:orientation="vertical">
	            <LinearLayout 
	                android:layout_width="match_parent"
	                android:layout_height="wrap_content"
	                android:padding="5dp"
	                android:orientation="horizontal">
	                <TextView 
	                    style="@style/result_trem_tv"
	                    android:text="@string/topic_num"/>
	                <TextView 
	                    style="@style/result_trem_tv"
	                    android:text="@string/present_choice"/>
	                <TextView 
	                    style="@style/result_trem_tv"
	                    android:text="@string/right_wrong"/>
	                <TextView 
	                    style="@style/result_trem_tv"
	                    android:text="@string/result"/>
	                <TextView 
	                    style="@style/result_trem_tv"
	                    android:text="@string/score"/>
	            </LinearLayout>
	            <TextView 
				    android:layout_width="match_parent"
				    android:layout_height="1dp"
				    android:background="@color/result_line_tv"
				    />
	            <LinearLayout 
	                android:layout_width="match_parent"
	                android:layout_height="wrap_content"
	                android:padding="3dp"
	                android:orientation="horizontal">
	                <TextView 
	                    android:text="@string/topic_num1"
	                    style="@style/result_trem_tv"/>
	                <TextView 
	                    android:text=""
	                    android:id="@+id/present4"
	                    style="@style/result_trem_tv"/>
	                <TextView 
	                    android:text=""
	                    android:id="@+id/right_wrong4"
	                    style="@style/result_trem_tv"
	                    />
	                <TextView 
	                    android:text=""
	                    android:id="@+id/result4"
	                    style="@style/result_trem_tv"
	                    />
	                <TextView 
	                    android:text=""
	                    android:id="@+id/score4"
	                    style="@style/result_trem_tv"
	                    />
	            </LinearLayout>
	            <LinearLayout 
	                android:layout_width="match_parent"
	                android:layout_height="wrap_content"
	                android:padding="3dp"
	                android:orientation="horizontal">
	                <TextView 
	                    android:text="@string/topic_num2"
	                    style="@style/result_trem_tv"/>
	                <TextView 
	                    android:text=""
	                    android:id="@+id/present5"
	                    style="@style/result_trem_tv"
	                    />
	                <TextView 
	                    android:text=""
	                    android:id="@+id/right_wrong5"
	                    style="@style/result_trem_tv"
	                    />
	                <TextView 
	                    android:text=""
	                    android:id="@+id/result5"
	                    style="@style/result_trem_tv"
	                    />
	                <TextView 
	                    android:text=""
	                    android:id="@+id/score5"
	                    style="@style/result_trem_tv"
	                    />
	            </LinearLayout>
	        </LinearLayout>
	        <LinearLayout 
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:layout_marginTop="10dp"
	            android:layout_marginBottom="10dp"
	            android:padding="8dp"
	            android:background="@drawable/radio_title_shape"
	            android:orientation="horizontal">
	            <TextView 
	                style="@style/result_tv"
	                android:text="@string/total_score"/>
	            <TextView 
	                android:text=""
	                android:id="@+id/total_score"
	                style="@style/result_tv"
	                />
	        </LinearLayout>
	        <LinearLayout 
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:layout_marginTop="10dp"
	            android:layout_marginBottom="10dp"
	            android:orientation="horizontal"
	            >
	            <Button 
	                android:id="@+id/show_result"
	                style="@style/result_button"
	                android:text="@string/show_result"/>
	            <Button 
	                android:id="@+id/one_again"
	                style="@style/result_button"
	                android:text="@string/one_again"/>
	        </LinearLayout>
	        
	    </LinearLayout>
	</ScrollView> 
</LinearLayout>