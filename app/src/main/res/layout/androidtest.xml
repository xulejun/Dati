<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="@drawable/result_bg">
    <RelativeLayout 
		 android:layout_width="fill_parent"
		 android:layout_height="48.0dp"
		 android:id="@+id/android_home" 
		 android:background="@drawable/radio_toptitle_shape">
	   <TextView 
		    style="@style/title"
		    android:text="@string/android_test"
	    	/> 
	   <TextView 
		    android:layout_width="match_parent"
		    android:layout_height="1dp"
		    android:background="@color/color2"
		    android:layout_alignParentBottom="true"
	  	   />
	</RelativeLayout>
    
    <ScrollView 
        android:layout_width="match_parent"
        android:padding="10dp"
        android:layout_gravity="center_horizontal"
        android:layout_height="wrap_content">
        <LinearLayout 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:background="@drawable/radio_bg_shape"
            android:orientation="vertical">
            <TextView 
                style="@style/androidtest_title_tv"
                android:text="@string/single_topic"/>
            <LinearLayout 
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:layout_marginTop="3dp"
                android:background="@drawable/radio_shape"
                android:orientation="vertical">
	           <TextView 
	               style="@style/topic_title"
	               android:text="@string/android_rb1"/>
	           <RadioGroup 
	               android:id="@+id/android_rg1"
	               android:layout_width="match_parent"
	               android:layout_height="wrap_content"
	               android:orientation="vertical">
	               <RadioButton 
	                   android:id="@+id/android_rb1_a"
	                   style="@style/radio_check"
	                   android:text="@string/android_rb1_a"/>
	               <RadioButton 
	                   android:id="@+id/android_rb1_b"
	                   style="@style/radio_check"
	                   android:text="@string/android_rb1_b"/>
	               <RadioButton 
	                   android:id="@+id/android_rb1_c"
	                   style="@style/radio_check"
	                   android:text="@string/android_rb1_c"/>
	               <RadioButton 
	                   android:id="@+id/android_rb1_d"
	                   style="@style/radio_check"
	                   android:text="@string/android_rb1_d"/>
	               
	           </RadioGroup>
            </LinearLayout>
            <LinearLayout 
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:padding="10dp"
                android:background="@drawable/radio_shape"
                android:orientation="vertical">
	           <TextView 
	               style="@style/topic_title"
	               android:text="@string/android_rb2"/>
	           <RadioGroup 
	               android:id="@+id/android_rg2"
	               android:layout_width="match_parent"
	               android:layout_height="wrap_content"
	               android:orientation="vertical">
	               <RadioButton 
	                   android:id="@+id/android_rb2_a"
	                   style="@style/radio_check"
	                   android:text="@string/android_rb2_a"/>
	               <RadioButton 
	                   android:id="@+id/android_rb2_b"
	                   style="@style/radio_check"
	                   android:text="@string/android_rb2_b"/>
	               <RadioButton 
	                   android:id="@+id/android_rb2_c"
	                   style="@style/radio_check"
	                   android:text="@string/android_rb2_c"/>
	               <RadioButton 
	                   android:id="@+id/android_rb2_d"
	                   style="@style/radio_check"
	                   android:text="@string/android_rb2_d"/>
	               
	           </RadioGroup>
            </LinearLayout>
            <LinearLayout 
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:padding="10dp"
                android:background="@drawable/radio_shape"
                android:orientation="vertical">
	           <TextView 
	               style="@style/topic_title"
	               android:text="@string/android_rb3"/>
	           <RadioGroup 
	               android:id="@+id/android_rg3"
	               android:layout_width="match_parent"
	               android:layout_height="wrap_content"
	               android:orientation="vertical">
	               <RadioButton 
	                   android:id="@+id/android_rb3_a"
	                   style="@style/radio_check"
	                   android:text="@string/android_rb3_a"/>
	               <RadioButton 
	                   android:id="@+id/android_rb3_b"
	                   style="@style/radio_check"
	                   android:text="@string/android_rb3_b"/>
	               <RadioButton 
	                   android:id="@+id/android_rb3_c"
	                   style="@style/radio_check"
	                   android:text="@string/android_rb3_c"/>
	               <RadioButton 
	                   android:id="@+id/android_rb3_d"
	                   style="@style/radio_check"
	                   android:text="@string/android_rb3_d"/>
	               
	           </RadioGroup>
            </LinearLayout>
            <TextView 
                style="@style/androidtest_title_tv"
                android:layout_marginTop="15dp"
                android:text="@string/more_topic"/>
            <LinearLayout 
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:layout_marginTop="3dp"
                android:background="@drawable/radio_shape"
                android:orientation="vertical">
	           <TextView 
	               style="@style/topic_title"
	               android:text="@string/android_rb4"/>
	           
	               <CheckBox 
	                   android:id="@+id/androidtest_4_a"
	                   style="@style/radio_check"
	                   android:text="@string/android_rb4_a"/>
	               <CheckBox 
	                   android:id="@+id/androidtest_4_b"
	                   style="@style/radio_check"
	                   android:text="@string/android_rb4_b"/>
	               <CheckBox 
	                   android:id="@+id/androidtest_4_c"
	                   style="@style/radio_check"
	                   android:text="@string/android_rb4_c"/>
	               <CheckBox  
	                   android:id="@+id/androidtest_4_d"
	                   style="@style/radio_check"
	                   android:text="@string/android_rb4_d"/>
               
            </LinearLayout>
            <LinearLayout 
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:padding="10dp"
                android:background="@drawable/radio_shape"
                android:orientation="vertical">
	           <TextView 
	               style="@style/topic_title"
	               android:text="@string/android_rb5"/>

	               <CheckBox  
	                   android:id="@+id/androidtest_5_a"
	                   style="@style/radio_check"
	                   android:text="@string/android_rb5_a"/>
	               <CheckBox  
	                   android:id="@+id/androidtest_5_b"
	                   style="@style/radio_check"
	                   android:text="@string/android_rb5_b"/>
	               <CheckBox 
	                   android:id="@+id/androidtest_5_c"
	                   style="@style/radio_check"
	                   android:text="@string/android_rb5_c"/>
	               <CheckBox 
	                   android:id="@+id/androidtest_5_d"
	                   style="@style/radio_check"
	                   android:text="@string/android_rb5_d"/>

            </LinearLayout>
            <Button 
                android:id="@+id/submit"
                style="@style/submit_bt"
                android:text="@string/submit"/>
        </LinearLayout>
    </ScrollView>

</LinearLayout>