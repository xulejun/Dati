<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_bg"
    android:gravity="center"
    android:orientation="vertical" >
    
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">
        <EditText 
            android:id="@+id/username"
            style="@style/login_edittext"
            android:hint="@string/please_input_username"
            android:drawableLeft="@drawable/login_icon_username"
            android:text=""/>
        <EditText 
            android:id="@+id/password"
            style="@style/login_edittext"
            android:drawableLeft="@drawable/login_icon_password"
            android:text=""
            android:layout_marginTop="3dp"
            android:hint="@string/please_input_password"
            android:inputType="numberPassword"
            />
        
         <Button
               android:id="@+id/login_activity_login"
               android:layout_width="fill_parent"
               android:layout_height="wrap_content"
               android:layout_marginLeft="8dip"
               android:layout_marginRight="8dip"
               android:padding="10dp"
               android:layout_margin="8dp"
               android:background="@drawable/login_btn"
               android:shadowColor="#7f000000"
               android:shadowDx="0.0"
               android:shadowDy="1.0"
               android:shadowRadius="1.0"
               android:text="@string/login"
               android:textColor="#ffffff"
               android:textSize="18sp" 
               android:enabled="true"/>
        <Button
            android:id="@+id/login_activity_register"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dip"
            android:layout_marginRight="8dip"
            android:padding="10dp"
            android:layout_margin="8dp"
            android:background="@drawable/login_btn"
            android:shadowColor="#7f000000"
            android:shadowDx="0.0"
            android:shadowDy="1.0"
            android:shadowRadius="1.0"
            android:text="@string/register"
            android:textColor="#ffffff"
            android:textSize="18sp"
            android:enabled="true"/>
    </LinearLayout>
</LinearLayout>